@{
    ViewData["Title"] = "Login";
}
<header>
    <h1 class="welcome">Welcome to ManageMe.io</h1>
    <h4 class="slogan">Where projects are made easier!</h4>
</header>
<div class="row justify-content-center">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h3 class="text-center">Login</h3>
            </div>
            <div class="card-body">
                <form asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <input type="text" placeholder="Username or Email" class="form-control" id="username" name="username" required />
                    </div>
                    <br/>
                    <div class="form-group">
                        <input type="password" placeholder="Password" class="form-control" id="password" name="password" required />
                    </div>
                    <br/>
                    <label><input type="checkbox"> Remember me</label>
                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-primary w-100">Login</button>
                    </div>
                </form>
                <div class="mt-3 text-center">
                    <p>Don't have an account? <a asp-action="Register">Register here</a></p>
                </div>
            </div>
        </div>
    </div>
</div> 