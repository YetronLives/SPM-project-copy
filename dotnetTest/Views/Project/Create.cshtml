@model dotnetTest.Models.ProjectInfo

@{
    ViewData["Title"] = "Create Project";
}

<link rel="stylesheet" href="~/css/project-create.css" />

<div class="container">
    <div class="card">
        <div class="card-header">
            <h2>Create a New Project</h2>
        </div>
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="ProjectName" class="control-label">Project Name</label>
                <input asp-for="ProjectName" class="form-control" placeholder="Enter project name" />
                <span asp-validation-for="ProjectName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ProjectManagerName" class="control-label">Project Manager</label>
                <input asp-for="ProjectManagerName" class="form-control" placeholder="Enter project manager name" />
                <span asp-validation-for="ProjectManagerName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ProjectDescription" class="control-label">Project Description</label>
                <textarea asp-for="ProjectDescription" class="form-control" placeholder="Describe your project..."></textarea>
                <span asp-validation-for="ProjectDescription" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ProjectDueDate" class="control-label">Due Date</label>
                <input asp-for="ProjectDueDate" class="form-control" type="date" />
                <span asp-validation-for="ProjectDueDate" class="text-danger"></span>
            </div>

            <div class="btn-group">
                <button type="submit" class="btn btn-primary">Create Project</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}