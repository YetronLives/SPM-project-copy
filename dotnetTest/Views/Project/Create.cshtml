@model dotnetTest.Models.ProjectInfo

@{
    ViewData["Title"] = "Create Project";
}

<h2>Create a New Project</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="ProjectName" class="control-label"></label>
        <input asp-for="ProjectName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ProjectDescription" class="control-label"></label>
        <textarea asp-for="ProjectDescription" class="form-control"></textarea>
    </div>

    <h4>Tasks</h4>
    <div id="tasks-container">
        <div class="task-item">
            <input type="text" name="Tasks[0]" placeholder="Task Name" class="form-control" required />
        </div>
    </div>

    <button type="button" id="add-task" class="btn btn-secondary">Add Task</button>
    <button type="submit" class="btn btn-primary">Create</button>
</form>

